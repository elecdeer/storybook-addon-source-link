{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/dist/**/*",
			"!**/node_modules/**/*",
			"!**/storybook-static/**/*",
			"!**/package.json"
		]
	},
	"formatter": {
		"enabled": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"jsxRuntime": "reactClassic"
	}
}
